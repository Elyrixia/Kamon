<!DOCTYPE aspectj PUBLIC "-//AspectJ//DTD//EN" "http://www.eclipse.org/aspectj/dtd/aspectj.dtd">

<aspectj>
    <aspects>
        <aspect name="kamon.zipkin.instrumentation.BaseZipkinInstrumentation" />
        <aspect name="kamon.zipkin.instrumentation.EnableZipkinInstrumentation" />
    </aspects>
    <weaver>
        <include within="*" />

        <!-- exclude some actors -->
        <exclude within="akka.event..*" />
        <exclude within="kamon.zipkin.actor..*" />
        <exclude within="kamon.zipkin.submitter..*" />

        <!--  exclude some commons packages -->
        <exclude within="org..*" />
        <exclude within="ch.qos.logback..*" />
        <exclude within="com.google..*"/>
        <exclude within="*..*CGLIB*" />
    </weaver>
</aspectj>